{% extends "../layout.twig" %}
{% autoescape None %}
{% block body %}
<div class="container">
    <div class="card" style="margin:20px auto 0 auto;width: 500px;">
        <div class="card-header font-weight-bold">
            {{ _("Register") }}
        </div>
        <form class="card-body" enctype="application/x-www-form-urlencoded" method="post">
            <table class="table table-borderless">
                <tbody>
                <tr>
                    <td class="font-weight-bold">{{ _("Login name") }}</td>
                    <td>
                        <input type="text" name="login_name" required class="form-control" value="{{ login_name }}">
                    </td>
                </tr>
                <tr>
                    <td class="font-weight-bold">{{ _("Nickname") }}</td>
                    <td>
                        <input type="text" name="nickname" required class="form-control">
                    </td>
                </tr>
                <tr>
                    <td class="font-weight-bold">{{ _("Email") }}</td>
                    <td>
                        <input type="email" name="email" required class="form-control">
                    </td>
                </tr>
                <tr>
                    <td class="font-weight-bold">{{ _("Phone") }}</td>
                    <td>
                        <input type="text" name="phone" required class="form-control">
                    </td>
                </tr>
                <tr>
                    <td class="font-weight-bold">{{ _("Password") }}</td>
                    <td>
                        <input type="password" name="password" required class="form-control">
                    </td>
                </tr>
                <tr>
                    <td class="font-weight-bold">{{ _("Password confirm") }}</td>
                    <td>
                        <input type="password" name="password_confirm" required class="form-control">
                        <div class="text-danger password_confirm_error"></div>
                    </td>
                </tr>
                </tbody>
            </table>
            <input type="submit" class="btn btn-primary" value="{{ _("Register") }}">
        </form>

        <script>
            (function () {
                var form = $("form");
                var password_confirm_error_div = form.find('.password_confirm_error');
                form.submit(function (e) {
                    if (this.password.value !== this.password_confirm.value) {
                        e.preventDefault();
                        password_confirm_error_div.html("{{ _('Password confirm not match') }}")
                    } else {
                        password_confirm_error_div.empty();
                    }
                });
            })();
        </script>
    </div>
</div>
{% end %}