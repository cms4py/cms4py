{% extends "../layout.twig" %}
{% autoescape None %}
{% block body %}
<div class="container" id="vueapp">
    <div class="card" style="margin:20px auto 0 auto;width: 500px;">
        <div class="card-header font-weight-bold">
            {{ _("Register") }}
        </div>
        <form class="card-body" enctype="application/x-www-form-urlencoded" method="post" @submit="formSubmitHandler">
            <table class="table table-borderless">
                <tbody>
                <tr>
                    <td class="font-weight-bold">{{ _("Login name") }}</td>
                    <td>
                        <input type="text" name="login_name" required class="form-control" value="{{ login_name }}"
                               @change="loginNameChangeHandler" v-model="login_name">
                        <div v-html="login_name_alert_msg"></div>
                    </td>
                </tr>
                <tr>
                    <td class="font-weight-bold">{{ _("Nickname") }}</td>
                    <td>
                        <input type="text" name="nickname" required class="form-control">
                    </td>
                </tr>
                <tr>
                    <td class="font-weight-bold">{{ _("Email") }}</td>
                    <td>
                        <input type="email" name="email" required class="form-control">
                    </td>
                </tr>
                <tr>
                    <td class="font-weight-bold">{{ _("Phone") }}</td>
                    <td>
                        <input type="text" name="phone" required class="form-control">
                    </td>
                </tr>
                <tr>
                    <td class="font-weight-bold">{{ _("Password") }}</td>
                    <td>
                        <input type="password" name="password" required class="form-control" v-model="password">
                    </td>
                </tr>
                <tr>
                    <td class="font-weight-bold">{{ _("Password confirm") }}</td>
                    <td>
                        <input type="password" name="password_confirm" required class="form-control"
                               v-model="passwordConfirm">
                        <div v-html="password_confirm_alert_msg"></div>
                    </td>
                </tr>
                </tbody>
            </table>
            <input type="submit" class="btn btn-primary" value="{{ _("Register") }}" :disabled="!allFieldsVerified">
        </form>
    </div>
</div>
<div class="languages" style="display: none;">
    <div class="password_confirm_not_match">{{ _('Password confirm not match') }}</div>
    <div class="password_confirm_matched">{{ _('Password confirm matched') }}</div>
    <div class="checking_login_name">{{ _('Checking login name') }}</div>
    <div class="login_name_exists">{{ _('Login name exists') }}</div>
</div>
<script src="{{ URL(config.STATIC_FILES_URL_PATH,'js','user_register.js',vars=dict(app_version=config.APP_VERSION)) }}"></script>
{% end %}